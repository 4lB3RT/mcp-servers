{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "albert/mcp-servers",
    "type": "project",
    "description": "Collection of MCP servers for Claude Code integration.",
    "keywords": [
        "mcp",
        "claude-code"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.9",
        "mcp/sdk": "^0.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
